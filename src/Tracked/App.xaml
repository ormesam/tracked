<?xml version="1.0" encoding="utf-8" ?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tracked.App"
    xmlns:converters="clr-namespace:Tracked.Converters">
    <Application.Resources>
        <converters:BoolToGpsColourConverter
            x:Key="BoolToGpsColourConverter" />
        <converters:InvertBoolConverter
            x:Key="InvertBoolConverter" />
        <converters:AccelerometerStatusToColourConverter
            x:Key="AccelerometerStatusToColourConverter" />
        <converters:MedalToImageConverter
            x:Key="MedalToImageConverter" />

        <Color
            x:Key="DefaultBackgroundColour">
            #080870
        </Color>
        <Color
            x:Key="GoogleButtonColour">
            #DD4B39
        </Color>
    </Application.Resources>
</Application>